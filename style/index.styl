$green=rgb(31,174,107)
$gHover = #1A8A55


html
  position relative
  min-height 100%

body
/* Margin bottom by footer height */
  margin-bottom 60px

.footer
  display none
  position fixed
  bottom 0
  width 100%
  height 60px
  background-color #f5f5f5

.container
  +below(992px)
    width 95%
  +below(767px)
    width 95%

.container>.navbar-header
  width 100%
  min-height 80px

.navbar>.container .navbar-brand
  padding-top 8px

.navbar-default
  background-color #fff
  border-color #e7e7e7

.navbar-default .navbar-nav>li>a:hover
    color $green

.navbar-toggle    
  float left
  margin-left 8px
  
.nav.navbar-nav
  +below(992px)
    width 90%
    
.nav>li>a
    position relative
    display block
    color $green
    text-transform uppercase
    padding 10px
    font-size 14px
    +below(1200px)
      padding 5px
      font-size 13px

.nav>li>a:hover
    color $gHover
    
.navbar-header
  img
    &.genspace
      width 260px
      max-width 50%
      margin 10px 0 10px 10px
      +below(767px)
        margin 10px

  .navbar-brand
    float right    
    +below(767px)
      padding 5px
    #logo
      width 100px
      max-width 100px
      height auto
      +below(767px)
        width 80px
        height 80px
h2
  &.lead
    font-size 22px
h4
  margin 20px 0 
  .lead
    font-size 16px
    +below(1200px)
      font-size 14px

.lead
  font-size 21px
  +below(1200px)
    font-size 18px

/* Custom page CSS
-------------------------------------------------- */
body
  margin 0
  padding 0
  width 100%

body > .container
  padding 160px 15px 0
  /*background-color rgba(255,255,255,.7)*/

.underline
  text-decoration underline

.container .text-muted
  margin 20px 0
  color #e7e7e7

.footer > .container
  padding-right 15px
  padding-left 15px

code
  font-size 80%

.green
  color $green
  
.section
  margin 60px 0
  border-top 1px
  border-color #e7e7e7
  
.background
  background-color rgba(255,255,255,0.8)
  position fixed
  width 100%
  height 100%
  top 0

#content
  z-index 1
  position relative
  a
    color $green
    background-color #fff
    padding 0 5px
  a:hover
    color $gHover

.mapBackground
  background url("../img/gowanus_canal.jpg")
  background-size cover
  position fixed
  top 0
  width 100%
  height 100%
  
.teamBackground
  background url("../img/genspace_teamphoto_web.jpg")
  background-position center center
  background-repeat no-repeat
  background-size cover
  position absolute
  top 0
  width 100%
  height 100%

.banner
  display block
  width 100%
  height 65%
  
#content.home
  .row
    margin 30px 0

#mapimg,
#map
  z-index 0
  position fixed
  top 0
  width 100%
  display none

.showMap
  #mapimg,
  #map
    display block
    position absolute
iframe
  width 100%
  height 700px
  +below(1200px)
    height 640px
  +below(990px)
    height 480px
        
svg
  .outline, .sites
    opacity 0
  .outline
    fill $green
    stroke $gHover
    
  &.showOutline
    .outline
      opacity .1
    .sites
      opacity 1

.dropdown-menu
  text-transform capitalize

.expand>.dropdown-menu
  display block

.heading
  border-bottom 2px solid #e7e7e7
  padding 10px 0
  text-transform capitalize

img
  &.bio
    width 100%

.row
  z-index 1
  position relative
  img
    &.genspace
      max-width 420px
      margin-bottom 20px
      
  &.intro
    img
      width 100%
      max-width 600px
      +below(992px)
        margin 20px auto
        display block
.team
  &.container
    padding-top 0px
  .member
    .lead
      text-transform capitalize

.parts
  .row
    background-color rgba(255,255,255,0.8)
    z-index 0
    position relative
    border-top 0px solid #c7c7c7
    margin 40px 0 80px
    
  .header 
    margin 0
    background-color rgba(255,255,255,0)
    border-top 0px solid #c7c7c7

  .section
    height 640px  
    margin 20px 0
  svg
    pointer-events none
    
.construct-map
  transform scale(1.3) translate(-50px, 20px)
  +below(1200px)
    transform scale(1.2) translate(-70px, 20px)

.week
  margin 0px 0 20px
  padding 0px 0 60px
  border-bottom 2px solid #c7c7c7
  table
    margin 30px auto
    width 90%
    
  .header
    margin 20px 
  .section
    background-color rgba(255,255,255,0.8)
    padding 20px
    margin 0px
    img
      width 100%
      margin 20px auto
      display block
      &.small
        max-width 500px
      &.col2
        margin 20px 1%
        max-width 46%
        float left
      
.attributions
  .member
    width 100%
    margin 10px 0
    display inline-block
  p
    margin 0
    line-height 18px
    width auto
  .name
    float left
    width 20%
    +below(767px)
      width 30%
  .attribution
    width 65%
    text-transform capitalize
    float left
  
