$green=rgb(31,174,107)
$gHover = #1A8A55


html
  position relative
  min-height 100%

body
/* Margin bottom by footer height */
  margin-bottom 60px

.footer
  display none
  position fixed
  bottom 0
  width 100%
  height 60px
  background-color #f5f5f5

.container>.navbar-header
  width 100%
  min-height 80px

.navbar>.container .navbar-brand
  padding-top 8px

.navbar-default
  background-color #fff
  border-color #e7e7e7

.navbar-default .navbar-nav>li>a:hover
    color $green
    
.navbar-brand
  float right
  +below(768px)
    float left
      
.nav>li>a
    position relative
    display block
    color $green
    text-transform uppercase
    padding 10px
    +below(1200px)
      padding 5px

.nav>li>a:hover
    color $gHover

h4
  .lead
    font-size 16px
    +below(1200px)
      font-size 14px

.lead
  font-size 21px
  +below(1200px)
    font-size 18px

/* Custom page CSS
-------------------------------------------------- */
body
  margin 0
  padding 0
  width 100%

body > .container
  padding 160px 15px 0
  /*background-color rgba(255,255,255,.7)*/

.container .text-muted
  margin 20px 0
  color #e7e7e7

.footer > .container
  padding-right 15px
  padding-left 15px

code
  font-size 80%

.green
  color $green
  
.section
  margin 60px 0
  border-top 1px
  border-color #e7e7e7

#logo
  width 100px
  height 100px
  transition all ease-in-out .4s
  
.background
  background-color rgba(255,255,255,0.8)
  position fixed
  width 100%
  height 100%

#content
  z-index 1
  position relative
  a
    color $green
    background-color #fff
    padding 0 5px
  a:hover
    color $gHover

.mapBackground
  background url("../img/gowanus_canal.jpg")
  background-size cover
  position fixed
  top 0
  width 100%
  height 100%
  
#mapimg,
#map
  z-index 0
  position fixed
  top 0
  width 100%
  display none

.showMap
  #mapimg,
  #map
    display block
    position absolute
    
svg
  .outline, .sites
    opacity 0
  .outline
    fill $green
    stroke $gHover
    
  &.showOutline
    .outline
      opacity .1
    .sites
      opacity 1

.dropdown-menu
  text-transform capitalize

.expand>.dropdown-menu
  display block

.heading
  border-bottom 2px solid #e7e7e7
  padding 10px 0

img
  &.bio
    width 100%

.row
  z-index 1
  position relative
  img
    &.genspace
      max-width 420px
      margin-bottom 20px
      
  &.intro
    img
      width 100%
      max-width 600px
      +below(992px)
        margin 20px auto
        display block
.parts
  .row
    background-color rgba(255,255,255,0.8)
    z-index 0
    position relative
    border-top 0px solid #e7e7e7
    margin 40px 0 80px
    
  .header 
    margin 0
    background-color rgba(255,255,255,0)
    border-top 0px solid #e7e7e7

  .section
    height 640px  
    margin 20px 0
  svg
    pointer-events none
    
.construct-map
  transform scale(1.3) translate(-50px, 20px)
  +below(1200px)
    transform scale(1.2) translate(-70px, 20px)

